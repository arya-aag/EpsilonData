<Window x:Class="EpsilonOne.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpsilonOne"
        mc:Ignorable="d"
        Title="Epsilon Data Market Analysis" Height="320" Width="540" WindowStartupLocation="CenterScreen">
    <Canvas>
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF452783" Offset="0"/>
                <GradientStop Color="#FF543595" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Label x:Name="lblAppName" Content="Epsilon Data Market Analysis" Canvas.Left="10" Canvas.Top="10" Width="320" Height="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Slabo 27px" FontSize="21.333" Foreground="White"/>
        <Button x:Name="btnStockDetails" Content="View Individual Stock Details" Canvas.Left="335" Canvas.Top="10" Width="187" Height="36" Click="ShowStockDetailsWindow"/>

    </Canvas>
</Window>
