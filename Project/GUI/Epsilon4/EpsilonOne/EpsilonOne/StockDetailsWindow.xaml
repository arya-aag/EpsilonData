        <Label x:Name="label1_Copy" Content="Sectoral Trade Volume" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="511" Background="{x:Null}" Canvas.Left="78" Canvas.Top="154" Margin="0" Padding="10,5,5,5" VerticalContentAlignment="Center" Foreground="White" BorderBrush="#FF34FFBF" BorderThickness="0,0,0,2" FontSize="18.667"/>
