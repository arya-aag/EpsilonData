                <Label HorizontalContentAlignment="Left" x:Name="lblRisk" Height="28" Margin="10,0">
                    <Rectangle x:Name="rectRisk" Width="115" Height="18" Fill="White" Margin="105,-10,0,0" MaxWidth="115" />
                </Label>
            </StackPanel>
        </GroupBox>
        <Button x:Name="btnPlot" Content="View Trends For This Stock" Canvas.Left="333" Canvas.Top="582" Width="256" Height="36" Click="ShowGraphWindow"/>
        <Button x:Name="btnPiePlot" Content="Sectoral Performance by Vol." Canvas.Left="991" Canvas.Top="243" Width="200" Height="36" Click="ShowPiePlot"/>

    </Canvas>
