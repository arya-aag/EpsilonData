                <Label HorizontalContentAlignment="Left" x:Name="lbl52Low" Content="         52 Week Low:" Height="28" Margin="10,0"/>
                <Label HorizontalContentAlignment="Left" x:Name="lblRiskName" Content="              Risk Meter: fffff" Height="28" Margin="10,0"/>
                <Label HorizontalContentAlignment="Left" x:Name="lblRisk" Height="28" Margin="10,0">
                    <Rectangle x:Name="rectRisk" Width="0" Height="18" Fill="White" Margin="108,-10,0,0" MaxWidth="115" />
                </Label>
