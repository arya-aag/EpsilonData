                <SolidColorBrush Color="White" Opacity="0.95"/>
            </GroupBox.Background>
            <StackPanel Margin="0,0,0,0">
                <Label x:Name="lblTickerName" Content="[TICKER]" Canvas.Left="517" Canvas.Top="6" Height="36" Margin="10,10,118,0" FontSize="21.333"/>
