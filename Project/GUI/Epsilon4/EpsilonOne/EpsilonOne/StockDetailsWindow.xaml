        <Image x:Name="imgCiti" Height="60" Canvas.Left="1271" Canvas.Top="16" Width="60" Source="C:\Users\Grad114\Desktop\EpsilonData\Project\GUI\Epsilon4\EpsilonOne\images\citi.png"/>

        <Label x:Name="label1_Copy" Content="List of Stocks" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="511" Background="{x:Null}" Canvas.Left="78" Canvas.Top="154" Margin="0" Padding="10,5,5,5" VerticalContentAlignment="Center" Foreground="White" BorderBrush="#FF34FFBF" BorderThickness="0,0,0,2" FontSize="18.667"/>
        <ListBox x:Name="lstTickers" HorizontalAlignment="Left" Height="291" VerticalAlignment="Top" Width="200" Background="White" Canvas.Left="115" Canvas.Top="286" SelectionChanged="ShowStockDetails" SelectedIndex="0"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Canvas.Left="115" Canvas.Top="256" TextChanged="SearchTickers" VerticalContentAlignment="Center" Panel.ZIndex="1" Background="White"/>
