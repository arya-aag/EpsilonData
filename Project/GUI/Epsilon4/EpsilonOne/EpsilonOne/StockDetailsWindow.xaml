                <SolidColorBrush Color="White" Opacity="0.95"/>
            </ListBox.Background>
        </ListBox>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Canvas.Left="756" Canvas.Top="234" TextChanged="SearchTickers" VerticalContentAlignment="Center" Panel.ZIndex="1">
