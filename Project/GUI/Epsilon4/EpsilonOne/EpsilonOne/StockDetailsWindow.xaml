        <Button x:Name="btnPlot" Content="View Trends For This Stock" Canvas.Left="957" Canvas.Top="594" Width="257" Height="36" Click="ShowGraphWindow" Foreground="White" BorderBrush="White" Background="{x:Null}" FontSize="14"/>
